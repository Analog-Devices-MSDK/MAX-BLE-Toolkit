/***********************| custom style for scroll bar |***********************/

QScrollBar:horizontal {
    border: none;
    background: #6272a4;
    height: 8px;
    margin: 0px 21px 0 21px;
	border-radius: 0px;
}
QScrollBar::handle:horizontal {
    background: rgb(189, 147, 249);
    min-width: 25px;
	border-radius: 4px
}
QScrollBar::add-line:horizontal {
    border: none;
    background: #6272a4;
    width: 20px;
	border-top-right-radius: 4px;
    border-bottom-right-radius: 4px;
    subcontrol-position: right;
    subcontrol-origin: margin;
}
QScrollBar::sub-line:horizontal {
    border: none;
    background: #6272a4;
    width: 20px;
	border-top-left-radius: 4px;
    border-bottom-left-radius: 4px;
    subcontrol-position: left;
    subcontrol-origin: margin;
}
QScrollBar::up-arrow:horizontal, QScrollBar::down-arrow:horizontal
{
     background: none;
}
QScrollBar::add-page:horizontal, QScrollBar::sub-page:horizontal
{
     background: none;
}
QScrollBar:vertical {
    border: none;
    background-color: #6272a4;
    width: 8px;
    margin: 21px 0 21px 0;
    border-radius: 0px;
}
QScrollBar::handle:vertical {	
    background: rgb(189, 147, 249);
    min-height: 25px;
    border-radius: 4px
}
QScrollBar::add-line:vertical {
    border: none;
    background: #6272a4;
    height: 20px;
    border-bottom-left-radius: 4px;
    border-bottom-right-radius: 4px;
    subcontrol-position: bottom;
    subcontrol-origin: margin;
}
QScrollBar::sub-line:vertical {
    border: none;
    background: #6272a4;
    height: 20px;
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
    subcontrol-position: top;
    subcontrol-origin: margin;
}
 QScrollBar::up-arrow:vertical, QScrollBar::down-arrow:vertical {
     background: none;
 }

 QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical {
     background: none;
 }

/***********************| custom style for tab view |***********************/

QTabWidget::pane {
    border: 1px solid rgb(153, 157, 163);
    border-left: 0px;
    top: -1px;
}
QTabWidget::right-corner {
    subcontrol-origin: padding;
    right: 10px;
    bottom: 2px;
}
QTabBar::tab {
    background-color: rgb(255, 255, 255);
    border: 1px solid rgb(153, 157, 163);
    color: #464E69;
    border-bottom: 0px;
    border-top-left-radius: 0px;
    border-top-right-radius: 0px;
    min-width: 15ex;
    max-width: 20ex;
    min-height: 3ex;
    max-height: 3ex;
    padding: 1px 0px 1px 5px;;
    margin-right: -1px
}

QTabBar::tab:last {
    margin-right: 0px;
    min-width: 4ex;
    max-width: 4ex;
}

QTabBar::tab:first {
    border-left: 0px;
}

QTabBar::tab:only-one {
    margin: 0px;
    border-left: 0px;
}

QTabBar::tab:selected, QTabBar::tab:hover {
    background-color: #EBEBEF;
}

QTabBar::tab:selected {
    border-top: 2px solid rgb(153, 193, 241);
}

QTabBar::tab:!selected {
    bottom: 1px;
}

QTabBar::close-button {
    image: url(assets/images/icons/cil-x-inv.png);
    border-radius: 4px;
    top: 1px;
}
QTabBar::close-button:hover {
    background: #d5d5da;
}

/***********************| custom style for menu bar |***********************/
QMenuBar {
    background-color: rgb(205, 212, 223);
    color: #464E69;
    spacing: 1.25ex;
}

QMenuBar::item {
    background: transparent;
    border-radius: 4px;
    padding: 1px, 4px;
}

QMenuBar::item:pressed {
    background: rgb(180, 189, 202);
}

QMenu {
    background-color: #EBEBEF;
    color: #464E69;
    border: 1px solid rgb(153, 157, 163);
}

QMenu::item {
    background-color: transparent;
}

QMenu::item:selected {
    background-color: rgb(174, 206, 245);
}

/***********************| custom style for combo box |***********************/

#select_themeMode {
    color: #464E69;
    border: 3px solid #EBEBEF;
    background-color: #EBEBEF;
    border-radius: 4px;
    padding: 1px 18px 1px 3px;
}

#select_themeMode:hover {
    border: 3px solid #6272a4;
}

#select_themeMode::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 15px;
    border-top-right-radius: 4px;
    border-bottom-right-radius: 4px;
}

#select_themeMode::down-arrow {
    image: url(assets/images/icons/cil-arrow-bottom-inv.png);
}

#select_themeMode QListView {
    border: 3px solid rgb(255, 255, 255);
    background-color: rgb(255, 255, 255);
    color: #464E69;
    outline: 0px;
}

/***********************| custom style for tree view |***********************/
QTreeView {
    background-color: transparent;
    color: #464E69;
    show-decoration-selected: 0;
}

QTreeView::item {
    background: transparent;
    color: #464E69;
    border-top-color: transparent;
    border-bottom-color: transparent;
}

QTreeView::item:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 #EBEBEF, stop: 1 rgb(180, 189, 202));
}

QTreeView::item:selected:active {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 #6ea1f1, stop: 1 #567dbc);
}

QTreeView::item:selected:!active {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 #EBEBEF, stop: 1 rgb(180, 189, 202));
}