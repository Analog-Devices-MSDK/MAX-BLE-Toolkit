/***********************| Common button style for all buttons |***********************/
QFrame{
    border: 0px;
    background-color: transparent;
}
QLabel{
    background-color: transparent;
}
QPushButton{
    background-color: rgb(255, 255, 255);
    border: 1px solid rgb(30, 70, 78);
    color: #464E69;
    border-radius: 5px;	
    text-align: center;
    padding: 3px;
    margin: 0px;
}
QPushButton:hover{
    color: rgb(255, 255, 255);
    background-color: rgb(153, 193, 241);
}
QPushButton:pressed{
    color: rgb(255, 255, 255);
    background-color: #262E49;
}

/***********************| Common button style for all lists |***********************/
QListWidget {
    border: 2px solid #EBEBEF;
    border-radius: 5px;
    color: #464E69;
}
QChartView{
    border: 2px solid #EBEBEF;
    border-radius: 5px;
}
QTreeWidget {
    border: 0px;
    background-color: transparent;
}

/***********************| Common button style for all edit |***********************/
QLineEdit {
    color: #464E69;
    background-color: #EBEBEF;
}

QTextEdit {
    background-color: #EBEBEF;
    color: #464E69;
}

QCodeEditor {
    background-color: #EBEBEF;
    color: #464E69;
}
/***********************| Common button style for all labels |***********************/
QLabel{
    color: #464E69;
    background: transparent;

}

/***********************| Common button style for all radio button |***********************/
QRadioButton{
    color: #464E69;
}
QRadioButton::indicator {
    border: 3px solid #6272a4;
	width: 15px;
	height: 15px;
	border-radius: 10px;
    background: #6272a4;
    
}
QRadioButton::indicator:hover {
    border: 3px solid rgb(119, 136, 187);
}
QRadioButton::indicator:checked {
    background: 3px solid #bd93f9;
	border: 3px solid #bd93f9;	
}


/***********************| Common button style for all check boxes |***********************/
QCheckBox{
    color: #464E69;
}
QCheckBox::indicator {
    border: 3px solid #6272a4;
	width: 15px;
	height: 15px;
	border-radius: 10px;
    background: #6272a4;
}
QCheckBox::indicator:hover {
    border: 3px solid rgb(119, 136, 187);
}
QCheckBox::indicator:checked {
    background: 3px solid #bd93f9;
	border: 3px solid #bd93f9;	
}
